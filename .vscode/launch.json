	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch cafe24-interwork via Yarn",
			"runtimeExecutable": "yarn",
			"cwd": "${workspaceFolder}",
			"runtimeArgs": [
				"workspace",
				"@vircle/cafe24-interwork",
				"start:debug"
			],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch naver-store via Yarn",
			"runtimeExecutable": "yarn",
			"cwd": "${workspaceFolder}",
			"runtimeArgs": ["workspace", "@vircle/naver-store", "start:debug"],
			"console": "integratedTerminal"
		}
	]
}
